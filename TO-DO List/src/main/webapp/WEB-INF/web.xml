<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define the servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>p1.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>p1.RegisterServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>FunctionsServlet</servlet-name>
        <servlet-class>p1.FunctionsServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>p1.DeleteServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>p1.EditServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ShowAllTasksServlet</servlet-name>
        <servlet-class>p1.ShowAllTasksServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>PendingTasksServlet</servlet-name>
        <servlet-class>p1.PendingTasksServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>RescheduleServlet1</servlet-name>
        <servlet-class>p1.RescheduleServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>MarkAsCompleteServlet</servlet-name>
        <servlet-class>p1.MarkAsCompleteServlet</servlet-class>
    </servlet>
    
    <!-- Map servlets to URLs -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>FunctionsServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ShowAllTasksServlet</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>PendingTasksServlet</servlet-name>
        <url-pattern>/pending</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RescheduleServlet1</servlet-name>
        <url-pattern>/reschedule1</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MarkAsCompleteServlet</servlet-name>
        <url-pattern>/markComplete</url-pattern>
    </servlet-mapping>
    
</web-app>
